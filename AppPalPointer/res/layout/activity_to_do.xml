<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android1:layout_gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0e2367"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />
    <!-- Lägg till så inte denna text syns förrän vi har en distance android:visibility="gone" -->

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:src="@drawable/arrow"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/findpal"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Pals"
            android:textColor="#0e2367"
            android:textSize="13sp"
            android:typeface="serif" />

        <ToggleButton
            android1:id="@+id/toggleButton"
            android1:layout_width="wrap_content"
            android1:layout_height="55dp"
            android:layout_gravity="bottom"
            
            android1:layout_weight="1"
            android:onClick="onToggleClicked"
            android:textOff="Upload position"
            android:textOn="Stop uploading position"
            android:textColor="#0e2367"
            android:textSize="13sp"
            android:typeface="serif"
            android:layout_marginBottom="3dp"
            android1:text="ToggleButton" />

        <Button
            android1:id="@+id/display"
            style="?android:attr/buttonStyleSmall"
            android1:layout_width="wrap_content"
            android1:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textColor="#0e2367"
            android:textSize="13sp"
            android:typeface="serif"
            android1:text="Change Number" />
    </LinearLayout>

</LinearLayout>