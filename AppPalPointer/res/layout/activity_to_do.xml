<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/arrow"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android1:id="@+id/addbutton"
            style="?android:attr/buttonStyleSmall"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android1:onClick="startUploadOwnCoordinates"
            android1:text="Start" />

        <Button
            android1:id="@+id/stopbutton"
            style="?android:attr/buttonStyleSmall"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android1:onClick="stopUploadingCoordinates"
            android1:text="Stop" />

        <Button
            android1:id="@+id/display"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android1:text="changeNr" />

        <Button
            android:id="@+id/findpal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="FindPal" />
    </LinearLayout>

</LinearLayout>